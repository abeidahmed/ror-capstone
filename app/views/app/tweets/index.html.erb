<div data-controller="toggle" data-toggle-attribute-class="hidden" class="grid xl:grid-cols-12 px-4 gap-2 relative">
  <div class="xl:col-span-8">
    <div class="flex items-center justify-between">
      <nav>
        <a href="#" class="py-3 font-medium leading-5 px-4 inline-block text-gray-600 border-b-2 border-blue-500 hover:text-gray-900">Tweets</a>
      </nav>
      <div class="inline-flex flex-items-center justify-center xl:hidden">
        <button type="button" data-action="toggle#open" class="text-gray-500"><%= embed_svg "menu-alt", class: "h-6 w-6" %></button>
      </div>
    </div>
    <div class="p-4 bg-white rounded-md shadow my-4">
      <div class="flex space-x-3">
        <div class="flex-shrink-0">
          <img class="h-12 w-12 rounded-full" src="https://images.unsplash.com/photo-1488426862026-3ee34a7d66df?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=facearea&amp;facepad=2&amp;w=144&amp;h=144&amp;q=80" alt="">
        </div>
        <div class="flex-1">
          <%= render "form" %>
        </div>
      </div>
    </div>
    <div id="tweet-list" class="px-4 bg-white rounded-md shadow my-4 divide-y">
      <%= render @tweets %>
    </div>
  </div>
  <aside data-toggle-target="toggleable" class="hidden xl:col-span-4 lg:pl-0 absolute w-80 border-l border-gray-200 right-0 top-0 xl:block bg-white xl:static xl:w-full xl:pl-4 xl:bg-transparent lg:border-l-0" style="height: calc(100vh - 64px)">
    <div class="relative">
      <div class="absolute -ml-12 xl:hidden top-2">
        <button type="button" data-action="toggle#hide" class="p-2 rounded-full text-gray-700 bg-white shadow"><%= embed_svg "x", class: "h-6 w-6" %></button>
      </div>
      <div id="follow-suggestion" class="xl:mt-4 bg-white xl:rounded-lg xl:shadow">
        <header class="border-b border-gray-200 py-2 px-3 text-lg font-medium">
          Who to follow
        </header>
        <div class="divide-y">
          <%= render @follow_suggestions %>
        </div>
      </div>
    </div>
  </aside>
</div>
